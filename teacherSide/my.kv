<Button>
    font_size : 20
    color : 0.3,0.6,0.5,1
    size_hint : 0.3,0.1


WindowManager:
    MainWindow:
    BctWindow:
    BexWindow:
    BelWindow:
    SectionWindow:
    BctCDWindow:

<MainWindow>:
    name: "main"

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        rows:3

        AnchorLayout:
            anchor_x :'center'
            anchor_y :'top'

            Image:
                source: "assets/logo.png"
                size_hint: [None, None]
                size: [500, 400]
        

        AnchorLayout:
            anchor_x :'center'
            anchor_y :'bottom'

            GridLayout:
                size_hint : [None,None]
                size : [500,200]
                cols:1

                Button:
                    text: "Bct"
                    on_release:
                        app.root.current = "bct"
                        root.manager.transition.direction = "left"


                Button:
                    text: "Bex"
                    on_release:
                        app.root.current = "bex"
                        root.manager.transition.direction = "left"

                Button:
                    text: "Bel"
                    on_release:
                        app.root.current = "bel"
                        root.manager.transition.direction = "left"


<BctWindow>:
    name: "bct"

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        rows:3

        AnchorLayout:
            anchor_x :'left'
            anchor_y :'top'

            Image:
                source: "assets/logo.png"
                size_hint: [None, None]
                size: [200, 200]
    
        GridLayout: 
            cols:2    
            size_hint : [None,None]
            size : [500,200]

            Button:
                id: "back-btn"
                text: "Go Back"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            
            GridLayout:
                cols: 1
                
                Button:
                    text : "First Year"
                
                Button:
                    text : "Second Year"

                Button:
                    text : "Third Year"
                    on_release:
                        app.root.current ="section"
                        root.manager.transition.direction = "left"

                Button:
                    text : "Fourth Year"


<BexWindow>:
    name: "bex"

    GridLayout: 
        cols:2

        Button:
            id: "back-btn"
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        GridLayout:
            cols:1
            Button:
                text : "First Year"

            Button:
                text : "Second Year"

            Button:
                text : "Third Year"

            Button:
                text : "Fourth Year"

<BelWindow>:
    name: "bel"

    GridLayout: 
        cols:2

        Button:
            id: "back-btn"
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        GridLayout:
            cols:1
            Button:
                text : "First Year"

            Button:
                text : "Second Year"

            Button:
                text : "Third Year"

            Button:
                text : "Fourth Year"
            

<SectionWindow>:
    name: "section"

    GridLayout:
        cols:2
        Button:
            id: "back-btn"
            text: "Go Back"
            on_release:
                app.root.current = "bct"
                root.manager.transition.direction = "right"
    
        GridLayout:
            cols: 1

            Button:
                text : "AB"
        
            Button:
                text : "CD"
                on_release:
                    app.root.current = "bct-cd"
                    root.manager.transition.direction = "left"
<BctCDWindow>:
    name : "bct-cd"

    GridLayout:
        cols:1
        
        Button:
            id: "back-btn"
            text: "Go Back"
            on_release:
                app.root.current = "section"
                root.manager.transition.direction = "right"

        Button:
            text: "Start Attendance"
    
        
        
